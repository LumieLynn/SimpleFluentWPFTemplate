<ui:Page x:Class="SimpleTemplate.Views.NavigationRootView"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
         xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern" xmlns:ikw="http://schemas.inkore.net/lib/ui/wpf"
         xmlns:local="clr-namespace:SimpleTemplate.Views"
         xmlns:vm="clr-namespace:SimpleTemplate.ViewModels"
         mc:Ignorable="d" 
         d:DesignHeight="450" d:DesignWidth="800"
         Loaded="Page_Loaded"
         ui:Title="NavigationRootView">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Border
            x:Name="AppTitleBar"
            Grid.Column="1"
            Height="48"
            VerticalAlignment="Top"
            Background="Transparent"
            IsHitTestVisible="True">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="137"/>
                </Grid.ColumnDefinitions>
                <ikw:SimpleStackPanel x:Name="AppTitle" Orientation="Horizontal" Spacing="12">
                    <Image Source="/Assets/WpfLibrary_Minimal_64w.png" Width="20" RenderOptions.BitmapScalingMode="HighQuality"/>
                    <TextBlock x:Name="AppTitleText" Grid.Column="1"
                               VerticalAlignment="Center"
                               Text="{Binding AppTitle}" TextWrapping="NoWrap" FontWeight="Regular"/>
                </ikw:SimpleStackPanel>
            </Grid>
        </Border>
        <ui:NavigationView
            x:Name="NavigationViewControl"
            Grid.Column="1"
            IsPaneOpen="True"
            PaneTitle="{Binding PaneTitle}"
            IsTabStop="False"
            SelectedItem="{Binding Selected, Mode=OneWay}"
            IsTitleBarAutoPaddingEnabled="False"
            SelectionChanged="NavigationView_SelectionChanged"
            DisplayModeChanged="NavigationViewControl_DisplayModeChanged"
            IsSettingsVisible="True" Grid.ColumnSpan="2">

            <FrameworkElement.Resources>
                <Thickness x:Key="NavigationViewContentMargin">0,48,0,0</Thickness>
            </FrameworkElement.Resources>

            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem x:Name="NavigationItem_Home"
                                       Content="Home">
                    <ui:NavigationViewItem.Icon>
                        <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.Home}"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <ui:NavigationViewItem x:Name="NavigationItem_Apps"
                                       Content="Apps">
                    <ui:NavigationViewItem.Icon>
                        <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.OEM}"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
            </ui:NavigationView.MenuItems>

            <ui:ScrollViewerEx
                Margin="0,25,0,0">
                <ui:Frame x:Name="Frame_Main"
                          Margin="57,0,57,0">
                    <ui:Frame.Resources>
                        <DataTemplate DataType="{x:Type vm:HomePageViewModel}">
                            <local:HomePageView />
                        </DataTemplate>

                        <DataTemplate DataType="{x:Type vm:AppsPageViewModel}">
                            <local:AppsPageView />
                        </DataTemplate>
                    </ui:Frame.Resources>
                </ui:Frame>
            </ui:ScrollViewerEx>
        </ui:NavigationView>
    </Grid>
</ui:Page>
